<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="sensebreak.gui.controller.HearingController">
    <center>
        <HBox spacing="30" style="-fx-padding: 40;">
            <!-- SIDEBAR -->
            <fx:include source="Sidebar.fxml"/>
            <!-- MAIN CONTENT -->
            <VBox spacing="30">
                <VBox spacing="10">
                    <Label text="Pick your training for today" styleClass="section-title"/>
                    <Label text="Take a moment to reset with calming audio exercises. Headphones are recommended for the best experience."
                           wrapText="true" styleClass="text-p"/>
                </VBox>

                <HBox spacing="20">
                    <VBox.margin>
                        <Insets top="10"/>
                    </VBox.margin>
                    <VBox spacing="10" styleClass="image-card-small">
                        <Label text="Tracking Dot" styleClass="card-text-h3"/>
                        <Label text="Follow the moving dot across the screen" wrapText="true" styleClass="card-text-p"/>
                        <Label text="~45 sec" wrapText="true" styleClass="card-text-p"/>
                        <Button fx:id="trackingDotBtn" text="Start" maxWidth="Infinity" styleClass="button-orange"/>
                    </VBox>
                    <VBox spacing="10" styleClass="image-card-small">
                        <Label text="Blinking Prompt" styleClass="card-text-h3"/>
                        <Label text="Blink when prompted to relax eye muscles" wrapText="true"
                               styleClass="card-text-p"/>
                        <Label text="~30 sec" wrapText="true" styleClass="card-text-p"/>
                        <Button fx:id="blinkingPromptBtn" text="Start" maxWidth="Infinity" styleClass="button-orange"/>
                    </VBox>
                    <VBox spacing="10" styleClass="image-card-small">
                        <Label text="Focus Shift" styleClass="card-text-h3"/>
                        <Label text="Switch focus between near and far objects" wrapText="true"
                               styleClass="card-text-p"/>
                        <Label text="~40 sec" wrapText="true" styleClass="card-text-p"/>
                        <Button fx:id="visionStartBtn" text="Start" maxWidth="Infinity" styleClass="button-orange"/>
                    </VBox>
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>
